<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_vocab"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btntuDien"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:background="@drawable/bg_button"
        android:text="Từ điển"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGhiChu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_button"
        android:text="Ghi chú"
        app:layout_constraintEnd_toEndOf="@+id/btntuDien"
        app:layout_constraintStart_toStartOf="@+id/btntuDien"
        app:layout_constraintTop_toBottomOf="@+id/btntuDien" />
</androidx.constraintlayout.widget.ConstraintLayout>