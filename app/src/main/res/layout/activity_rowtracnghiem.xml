<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_Dap_An_DT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/tv_Cau_Hoi_DT"
        app:layout_constraintTop_toBottomOf="@+id/tv_Cau_Hoi_DT" />

    <TextView
        android:id="@+id/tv_Muc_Do_DT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/tv_Dap_An_DT"
        app:layout_constraintTop_toBottomOf="@+id/tv_Dap_An_DT" />

    <TextView
        android:id="@+id/tv_Cau_Hoi_DT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_Dap_An_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/tv_Muc_Do_DT"
        app:layout_constraintTop_toBottomOf="@+id/tv_Muc_Do_DT" />

    <TextView
        android:id="@+id/tv_Dap_An_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/tv_Dap_An_3"
        app:layout_constraintTop_toBottomOf="@+id/tv_Dap_An_3" />

    <TextView
        android:id="@+id/tv_Dap_An_Dung_TN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/tv_Dap_An_4"
        app:layout_constraintTop_toBottomOf="@+id/tv_Dap_An_4" />

    <TextView
        android:id="@+id/tv_Muc_Do_TN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/tv_Dap_An_Dung_TN"
        app:layout_constraintTop_toBottomOf="@+id/tv_Dap_An_Dung_TN" />

    <ImageView
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_del"
        app:layout_constraintTop_toTopOf="@+id/btn_del"
        app:srcCompat="@drawable/icon_edit" />

    <ImageView
        android:id="@+id/btn_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>